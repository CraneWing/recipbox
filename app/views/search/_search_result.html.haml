- @results.each do |result|
  - case result.class.name
  - when 'Post'
    %p
      = link_to "Post " + (result.id).to_s, '/posts/' + (result.id).to_s
      \: #{truncate(result.title, omission: '...', separator: ' ', length: 60)}
      %em
        Posted 
        = local_time(result.created_at, '%e %B %Y')
  - when 'Comment'
    %p
      = link_to "Comment on Post " + (result.post_id).to_s, '/posts/' + (result.post_id).to_s
      \: #{truncate(result.body, omission: '...', separator: ' ', length: 60).html_safe}
      %em
        Posted
        = local_time(result.created_at, '%e %B %Y')
= will_paginate @results