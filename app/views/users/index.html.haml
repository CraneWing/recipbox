= title('All Users')
.container
  .row.row-custom
    %h1 All Users
    %table.all-users
      - @users.in_groups_of(4, false) do |group|
        %tr
          - group.each do |user|
            %td
              .avatar-wrap
                - if user.avatar.blank? || user.avatar == 'avatar-default.jpg'
                  = image_tag default_url
                - else
                  = image_tag user.avatar.url(:thumb)
              %p.username-wrap= link_to user.username, user_path(user)