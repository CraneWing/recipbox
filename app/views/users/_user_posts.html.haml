%h3 User Posts
- if @posts
  %p
    %strong
      Number of posts:
    = @posts.count
  - @posts.each do |post|
    %p= link_to post.title, post_path(post)
    %p= truncate(post.body, omission: '...', separator: ' ', length: 65)
- else
  %p User has not submitted any posts yet.
%h3 User Comments
- if @comments
  %p
    %strong
      Number of comments:
    = @comments.count
  - @comments.each do |comment|
    %p= link_to truncate(comment.body, omission: '...', separator: ' ', length: 65), post_path(comment.post_id)
- else
  %p User has not submitted any comments yet.