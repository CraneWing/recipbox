:javascript
  // generates random jumbotron background every time link clicked.
  // excludes main dropdown links.
  $(document).ready(function() {
     $('a, li > a').on('click', function() {
            var randomImgStyle = "<style> .jumbotron { background-image: url(#{image_url 'jumbotron/food-image' + (1 + rand(40)).to_s + '.jpg'}) !important; } </style>"
            $('html > head').append(randomImgStyle);
            $('.jumbotron').fadeIn(500);  
        
     });
  });
  
  // call for jQuery timeago
  $(function() {
    $('time.timeago').timeago();
  });