= title('Edit Sign-In Info')
.container
  .row.forms-row
    %h2
      Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, url: registration_path(resource_name), html: { method: :put, class: 'forms'}) do |f|
      = f.error_notification
      .form-group
        = f.input :email, required: true, autofocus: true, class: 'form-control'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .form-group
        = f.input :password, autocomplete: "off", hint: "Leave blank if you don't want to change", required: false, class: 'form-control'
      .form-group
        = f.input :password_confirmation, required: false, class: 'form-control'
      .form-group
        = f.input :current_password, hint: "Current password to confirm change", class: 'form-control'
      .form-actions
        = f.button :submit, "Update", class: 'btn btn-primary'
    %h3 Other Actions
    %p
      = link_to "Cancel Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
      = link_to 'Back', current_user, class: 'btn btn-default'