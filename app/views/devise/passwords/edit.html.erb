<div class="container">
  <div class="row row-custom">    
    <h2>Change Password</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "forms" }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
    
      <div class="form-row">
        <%= f.input :password, label: "New password", required: true, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-row">
        <%= f.input :password_confirmation, label: "Confirm your new password", required: true, class: "form-control" %>
      </div>
      <%= f.button :submit, "Reset", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>